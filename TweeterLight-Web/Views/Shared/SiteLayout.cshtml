<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="@Href("~/")">TweeterLight</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @if (ViewBag.Title == "TweeterLight") { <li class = "active"><a href="@Href("~/")">Home</a></li> } else { <li><a href="@Href("~/")">Home</a></li>  }
                        @if (ViewBag.Title == "Privacy") { <li class = "active"><a href="@Href("~/Privacy/")">Privacy</a></li> } else { <li><a href="@Href("~/Privacy/")">Privacy</a></li>  }
                        @if (ViewBag.Title == "Contact") { <li class = "active"><a href="@Href("~/Contact/")">Contact</a></li> } else { <li><a href="@Href("~/Contact/")">Contact</a></li>  }
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
      <h1>@ViewBag.Title</h1>
        @RenderBody()
    </div>
</body>
</html>
